

{
  // "extends": "../../tsconfig.base.json",
  "compilerOptions": {

    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "types": ["vite/client"],


    "outDir": "dist",
    "rootDir": "src",
    // "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true
  },
  "include": ["src"]
}
